BASE_URL ?= http://localhost:8080
RATEL_TEST_USER_PASSWORD ?= admin!234
RATEL_TEST_ADMIN_PASSWORD ?= admin!234

ENV = RATEL_TEST_ADMIN_PASSWORD=$(RATEL_TEST_ADMIN_PASSWORD) \
			RATEL_TEST_USER_PASSWORD=$(RATEL_TEST_USER_PASSWORD) \
			BASE_URL=$(BASE_URL)
run:
	$(ENV) npx playwright test ./

ui: 
	$(ENV) npx playwright test --ui ./