          <JSR223PostProcessor guiclass="TestBeanGUI" testclass="JSR223PostProcessor" testname="Save AUTH_COOKIE" enabled="true">
            <stringProp name="scriptLanguage">groovy</stringProp>
            <stringProp name="script"><![CDATA[
def headers = prev.getResponseHeaders()
def cookies = []
headers.eachLine { line ->
  if (line.toLowerCase().startsWith("set-cookie:")) {
    def v = line.substring(line.indexOf(":") + 1).trim()
    def nv = v.split(";")[0].trim()
    if (nv) cookies << nv
  }
}
if (cookies.isEmpty()) {
  throw new Exception("No Set-Cookie found.\n" + headers)
}
props.put("AUTH_COOKIE", cookies.unique().join("; "))
            ]]></stringProp>
