{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ratel",
  "version": "0.1.0",
  "identifier": "foundation.ratel.app",
  "build": {
    "beforeDevCommand": "cd main-ui && make run",
    "devUrl": "http://localhost:8080",

    "beforeBuildCommand": "cd main-ui && make build.mobile",
    "frontendDist": "../../target/dx/main-ui/release/web/public"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "ratel",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
